<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_id"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:onClick="checkEmailPattern"
            android:hint="id"
            android:minHeight="48dp"
            tools:ignore="OnClick" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:text="중복확인"
            android:layout_marginTop="30dp"
            android:textSize="10dp"></Button>

    </LinearLayout>



    <EditText
        android:id="@+id/et_eamil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:onClick="checkEmailPattern"
        android:hint="email"
        android:minHeight="48dp"
        tools:ignore="OnClick" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:onClick="checkPwPattern"
        android:hint="password"
        android:inputType="textPassword"
        android:minHeight="48dp"
        tools:ignore="OnClick" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/warning_pwd_pattern"
        android:visibility="visible"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="50dp"
        android:textSize="10dp"
        android:text="소문자및 대문자와 숫자를 합한 4-16자가 필요합니다"
        android:textColor="#606060"/>

    <com.google.android.material.textfield.TextInputEditText
        android:inputType="textPassword"
        android:id="@+id/et_passwordConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:hint="password 확인"
        android:onClick="samePwd"
        android:minHeight="48dp"
        tools:ignore="OnClick" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/warning_pwd"
        android:visibility="visible"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="50dp"
        android:text="비밀번호가 일치하지 않습니다"
        android:textColor="#FF0000"/>

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:hint="이름"
        android:minHeight="48dp" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_signUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FCBF48"
            android:layout_weight="1"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:onClick="singUp"
            android:text="signup"
            tools:ignore="OnClick" />


    </LinearLayout>

</LinearLayout>