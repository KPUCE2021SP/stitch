<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/appdtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="제주도 가자"
        android:layout_gravity="center"
        android:textColor="#000000"
        />

    <TextView
        android:id="@+id/appdtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="2018.11.30 pm.10"
        android:layout_gravity="center"
        android:textColor="#000000"
        />
    <TextView
        android:id="@+id/appddeptime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="3시에 출발해!"
        android:layout_gravity="center"
        android:textColor="#FF0000"
        />
    <TextView
        android:id="@+id/appdlocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="모임 장소"
        android:textColor="#000000"
        />
    <TextView
        android:id="@+id/appdwith"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="20sp"
        android:text="함께하는 사람 : 윤채림"
        android:textColor="#000000"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:gravity="right"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btndok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="확인"/>

        <Button
            android:id="@+id/wheredfriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="위치보기"/>
    </LinearLayout>

</LinearLayout>